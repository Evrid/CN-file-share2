        justify-content: space-around;
        display: flex;
    }

    .div-2 {
        width: 100%;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }

    .download {
        background-color: #20b520;
        border: none;
        outline: none;
        color: white;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: space-around;
